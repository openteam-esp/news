<% content_for :sidebar do %>
  <div class="sidebar">
    <% content_for :extend_javascript do %>
      <%= javascript_include_tag "jquery.ui.min" %>
      <%= javascript_include_tag "jquery.ui.datepicker.ru" %>
    <% end %>
    <%= semantic_search_form_for :entry, :url => entries_path do | form | %>
      <%= form.inputs do %>
        <%= form.input :keywords %>
        <%= form.input :channel_ids, :as => :select, :collection => Channel.all %>
        <%= form.input :order_by, :required => false %>
      <% end %>
      <%= form.inputs "Дата публикации", :class => "inputs since" do %>
        <%= form.input :since_gt, :as => :date %>
        <%= form.input :since_lt, :as => :date %>
      <% end %>
      <%= form.inputs "Актуально", :class => "inputs until" do %>
        <%= form.input :until_gt, :as => :date %>
        <%= form.input :until_lt, :as => :date %>
      <% end %>
      <%= form.buttons do %>
        <%= form.commit_button :button_html => { :class => "button" } %>
        <li><%= link_to t("back"), :back %></li>
      <% end %>
    <% end %>
  </div>
<% end %>

<% content_for :content do %>
  <div class='content'>
    <%= yield %>
  </div>
<% end %>

<%= render :template => 'layouts/application' %>

