<!DOCTYPE html>
<html lang="ru">
  <head>
    <title><%= t("News system") %></title>
    <meta charset="UTF-8">
    <%= csrf_meta_tag %>
    <%= favicon_link_tag %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <% content_for :esp_auth_manage_links do %>
      <% subnamespace = controller_path.split('/').second.to_s.inquiry %>
      <%= link_to t('manage.entries.title'), manage_root_path, :class => subnamespace.news? ? 'selected' : nil %>
      <%= link_to t('manage.channels.title'), manage_channels_root_path, :class => subnamespace.channels? ? 'selected' : nil %>
    <% end %>
    <%= render :partial => "esp_auth/shared/header" %>
    <% flash.each do |name, msg| %>
      <% next unless %w[notice alert error].include?(name.to_s) %>
      <div class="flash_wrapper" style='display:none;'>
        <%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash_block" %>
        <a href='#' class='close_link'>Закрыть</a>
      </div>
    <% end %>

    <%= yield :right_sidebar %>

    <div class="main_container">
      <%= yield :main %>
    </div>

    <%= yield :sidebar %>
    <%= render :partial => "esp_auth/shared/footer" %>
  </body>
</html>

