<!DOCTYPE html>
<html lang="ru-RU">
  <head>
    <title><%= t("News system") %></title>
    <meta charset="UTF-8">
    <%= csrf_meta_tag %>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag "jquery.min" %>
    <%= yield :extend_javascript %>
    <%= javascript_include_tag "jquery.ujs" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <% flash.each do |name, msg| %>
      <div id="flash_wrapper">
        <%= content_tag :div, msg, :id => "flash_#{name}", :class => "flash_block" %>
      </div>
    <% end %>
    <div class='login_info'>
      <%= current_user.name if current_user %>
      <%= link_to t('logout'), destroy_user_session_path, :method => :delete if current_user %>
      <%= link_to t('login'), new_user_session_path unless current_user %>
    </div>
    <div class='container'>
      <div class='sidebar'>
        <%= link_to t('new_entry'), new_folder_entry_path(Folder.where(:title => 'draft').first), :class => 'new_entry' %>
        <%= render_navigation :context => :folders if current_user %>
        <%= render_navigation :context => :channels %>
      </div>
      <div class='content_wrapper'>
        <%= yield %>
      </div>
    </div>
  </body>
</html>

