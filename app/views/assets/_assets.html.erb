<fieldset class="assets_with_form">
  <legend><span>Прикреплённые файлы</span></legend>
  <div class="inner">
    <%= semantic_form_for Asset.new, :url => entry_assets_path(@entry), :html => {:multipart => true} do |form| %>
      <p><%= link_to "Загрузить файл", "#", :id => "fileupload", :multiple => "" %></p>
      <%= form.inputs do %>
        <%= form.input :file, :as => :file %>
      <% end %>
    <% end %>
    <% if @entry.reload.assets.any? %>
      <ul>
        <% @entry.reload.assets.each do |asset| %>
          <li>
            <%= render :partial => asset %>
            <%= link_to "удалить", entry_asset_path(@entry, asset),
                        :remote => true, :method => :delete,
                        :confirm => t('ckeditor.confirm_delete'),
                        :class => "remove", :title => "удалить" %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</fieldset>

