<%= content_tag(:div, :id => dom_id(attachment),
                :class => "gal-item",
                :"data-url" => asset_path(attachment, attachment.file_name)) do %>
  <%= link_to image_tag("/javascripts/ckeditor/filebrowser/images/gal_del.png", :title => I18n.t('ckeditor.buttons.delete')),
          entry_asset_path(@entry, attachment),
          :remote => true,
          :method => :delete,
          :confirm => t('ckeditor.confirm_delete'),
          :class => "fileupload-cancel gal-del" %>
  <div class="fileupload-file gal-inner-holder">
    <div class="img"><%=  image_tag "filetypes/icon_#{attachment.file_type}.png", :alt => "", :size => "64x64" %></div>
    <div class="img-data">
      <div class="img-name"><%= attachment.description %></div>
      <div class="time-size">
        <div class="time"><%= l attachment.created_at, :format => :long %></div>
        <div class="fileupload-size size"><%= number_to_human_size(attachment.file.size) %></div>
      </div>
    </div>
  </div>
<% end %>

