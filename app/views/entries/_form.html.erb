<%= semantic_form_for([@folder, @entry]) do |form| %>

  <%= form.inputs do  %>
    <%= form.input :user_id, :as => :hidden, :value => current_user.id %>
    <%= form.input :title %>
    <%= form.input :annotation, :as => :ckeditor, :input_html => { :height => "150" } %>
    <%= form.input :body, :as => :ckeditor, :input_html => { :height => "300" } %>
    <%= form.input :since %>
    <%= form.input :until %>
    <%= form.input :channels, :as => :check_boxes, :collection => Channel.all.to_a %>
  <% end %>

  <%= form.buttons %>

<% end %>

