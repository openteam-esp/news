<%= semantic_form_for(@entry) do |form| %>

  <%= form.inputs do  %>
    <%= form.input :user_id,    :as => :hidden, :value => current_user.id %>
    <%= form.input :title %>
    <%= form.cktext_area :annotation %>
    <%= form.cktext_area :body %>
    <%= form.input :since,      :as => :datetime %>
    <%= form.input :until,      :as => :datetime %>
    <%= form.input :channels,   :as => :check_boxes %>
  <% end %>

  <%= form.buttons %>

<% end %>

