<% content_for :extend_javascript do %>
  <%= javascript_include_tag "jquery_ui/jquery.ui.min" %>
  <%= javascript_include_tag "jquery_ui/jquery.ui.datepicker.ru" %>
  <%= javascript_include_tag "jquery_ui/jquery.ui.timepicker" %>
  <%= javascript_include_tag "jquery_ui/jquery.ui.timepicker.ru" %>
  <%= javascript_include_tag "redactor/jquery.redactor" %>
<% end %>

<%= semantic_form_for([@folder, @entry]) do |form| %>

  <%= form.inputs do  %>
    <%= form.input :user_id, :as => :hidden, :value => current_user.id %>
    <%= form.input :title, :as => :string, :input_html => { :class => "focus_first" } %>
    <%= form.input :annotation %>
    <%= form.input :body %>
    <%= form.input :since %>
    <%= form.input :until %>
    <%= form.input :channels, :as => :check_boxes, :collection => Channel.all.to_a %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
  <% end %>

<% end %>

