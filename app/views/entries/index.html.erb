<% if @entries.any? %>
  <h1><%= t('list_of_entries') %></h1>
  <ul class='entries'>
    <% @entries.each do |entry|%>
      <li>
        <p>
          <% last_event = entry.events.first %>
          <%= l last_event.created_at, :format => :long %>
          <%= link_to entry.composed_title.gilensize, folder_entry_path(@folder.title, entry) %>
          <%= t "event.kind.after.#{last_event.kind}" %>
          <%= "#{last_event.user}" %>
          <%= content_tag :span, last_event.text.truncate(150), :class => 'text' if last_event.text.present? %>
        </p>
      </li>
    <% end %>
  </ul>
  <%= paginate @entries %>
<% else %>
  <h1><%= t('no_any_entries') %></h1>
<% end %>

