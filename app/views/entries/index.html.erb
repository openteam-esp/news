<% if collection.any? %>
  <ul class='item_list'>
    <% collection.each do | entry | %>
      <li>
        <div class="time_ago">
          <%= l entry.since, :format => :short %>
        </div>
        <div class="title">
          <%= link_to entry.title, entry_path(entry) %>
        </div>
        <% if entry.image_url? %>
          <%= image_for entry, :width => 100, :height => 100 %>
        <% end %>
        <div class="annotation">
          <%= raw entry.annotation %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate collection %>
<% else %>
  <h2 class='empty'><%= t('no_any_entries') %></h2>
<% end %>
