<ul class="issues">
  <% entry.issues.each do |issue| %>
    <li class='<%= issue.state %>'>

      <div class='title'>
        <%= issue.description %>
        <span class="time_ago"><%= time_ago_in_words(issue.created_at) %> назад</span>
      </div>

      <% if issue.executor %>
        <div class="executor">
          <%= issue.executor %>
        </div>
      <% end %>

      <% if issue.comment %>
        <div class="comment">
          <%= issue.comment %>
        </div>
      <% end %>

      <%= render :partial => 'tasks/actions', :locals => { :task => issue } %>

      <div class='subtasks_wrapper'>
        <ul class="subtasks" id='<%= issue.class.name.downcase %>'>
          <% issue.filtered_subtasks.each do | subtask | %>
            <%= render subtask %>
          <% end %>
        </ul>
      </div>

    </li>
  <% end %>
</ul>
