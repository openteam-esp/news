<% if entry.locked_by %>
  <div class="lock_info">
    <div class="locked_by">
      <%= entry.locked_by %>
    </div>

    <div class="time_ago">
      <%= time_ago_in_words(entry.locked_at) %> назад
    </div>
    <%= semantic_form_for entry, :url => unlock_entry_path(entry), :html => {:method => :post} do | form | %>
      <%= form.buttons :class => "buttons" do %>
        <%= form.commit_button t('unlock_entry'), :button_html => {:class => "button"} %>
      <% end %>
    <% end if can?(:unlock, entry) %>
  </div>
<% end %>

<%= link_to t('edit_entry'), edit_entry_path(entry), :class => "button positive_button #{ability_to(:update, entry)}" %>

<%= semantic_form_for :entry, :url => recycle_entry_path(entry), :html => {:class => 'right_bottom'} do | form | %>
  <%= form.buttons do %>
    <li>Новость будет автоматически удалена <%= l entry.destroy_entry_job.run_at %></li>
    <%= form.commit_button t('recycle_entry'), :button_html => {:class => 'button recycle'} %>
   <% end %>
<% end if @entry.deleted? && can?(:recycle, entry) %>

<%= link_to t('to_trash'), entry_path, :method => :delete, :class => 'button to_trash right_bottom' if can?(:destroy, entry) %>
