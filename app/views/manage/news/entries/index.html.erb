<% if collection.any? %>
  <ul class='item_list'>
    <% collection.each do | entry | %>
      <li>
        <div class="time_ago">
          <%= time_ago_in_words(entry.updated_at) %> назад
        </div>

        <div class="title">
          <%= link_to composed_title(entry), manage_news_entry_path(entry) %>
        </div>

        <div class="state <%= entry.state %>">
          <%= I18n.t "state_machine.entry.state.#{entry.state}" %>
        </div>

        <div class="participants">
          <%= entry.initiator %>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate collection %>
<% else %>
  <h2 class='empty'><%= t('no_any_entries') %></h2>
<% end %>
