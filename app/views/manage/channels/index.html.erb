<%= link_to t('.add'), new_manage_channel_path, :class => 'button add' %>

<% if collection.any? %>
  <ul class='channel_list'>
    <% collection.each do |channel| %>
      <li class='channel'>
        <%= ('&nbsp;' * channel.depth * 2).html_safe %> <%= channel %>
        <%= link_to t('commons.delete'), manage_channel_path(channel), :method => :delete, :confirm => t('commons.confirm'), :class => 'button delete simple' %>
        <%= link_to t('commons.edit'), edit_manage_channel_path(channel) %>
      </li>
    <% end %>
  </ul>
  <%= paginate collection %>
  <%= link_to t('.add'), new_manage_channel_path, :class => 'button add' %>
<% else %>
  <h2 class='empty'><%= t('.empty_list') %></h2>
<% end %>
