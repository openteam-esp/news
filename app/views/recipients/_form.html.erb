<%= semantic_form_for([@channel, @recipient]) do |form| %>

  <%= form.inputs do  %>
    <%= form.input :email %>
    <%= form.input :description %>
    <%= form.input :active %>

  <% end %>


  <%= form.buttons do %>
    <%= form.commit_button :button_html => { :class => "button" } %>
  <% end %>

<% end %>
