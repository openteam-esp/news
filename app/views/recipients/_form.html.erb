<%= semantic_form_for @recipient do |form| %>
  <%= form.inputs do %>
    <%= form.input :email, :as => :email %>
    <%= form.input :description, :as => :text %>
    <%= form.input :channel %>
    <%= form.input :active, :as => :boolean, :input_html => { :checked => 'checked' } %>
  <% end %>

  <%= form.buttons do %>
    <%= form.commit_button %>
  <% end %>
<% end %>
