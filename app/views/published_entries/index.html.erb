<% if collection.any? %>
  <% collection.each do |entry|%>
    <ul class='entries'>
      <li>
        <%= l entry.updated_at, :format => :long %>
        <%= link_to strip_tags(entry.title_or_body.gsub('&quot;', '"').gilensize), channel_published_entry_path(@channel, entry) %>
      </li>
    </ul>
  <% end%>
<% else %>
  <%= content_tag :h1, t('no_any_entries'), :class => 'empty' %>
<% end %>

