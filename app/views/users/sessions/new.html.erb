<% content_for :extend_javascript do %>
  <%= javascript_include_tag "jquery.tipsy" %>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),
             :html => { :class => "formtastic sign_in" }) do |f| %>
  <%= devise_error_messages! %>
  <h2><%= t("Sign in") %></h2>
  <ul class="inputs">
    <li class="login string">
      <%= f.label :email %>
      <%= f.email_field :email, :class => "focus_first" %>
    </li>
    <li class="password">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <% if devise_mapping.rememberable? %>
      <li class="remember_me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </li>
    <% end %>
  </ul>
  <ul class="buttons inline">
    <li>
      <%= f.submit t("login"), :class => "button" %>
    </li>
    <li class="auth_links">
      <%= render :partial => "users/shared/links" %>
    </li>
  </ul>
<% end %>

<div class="social_services">
  <h2><%= t("Social authorization") %></h2>
  <ul>
    <% Settings["omniauth"].each do | provider, app | %>
      <li class="<%= provider %>">
        <%= link_to provider, "/auth/#{provider}", :title => t("authorization_on.#{provider}") %>
      </li>
    <% end %>
    <li class="google">
      <%= link_to "Google", "/auth/google", :title => t("authorization_on.google") %>
    </li>
    <li class="openid">
      <%= link_to "OpenId", "/auth/open_id", :title => t("authorization_on.open_id") %>
    </li>
  </ul>
</div>

