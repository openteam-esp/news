<div class='auth_block'>
  <div class='top'>
    <h1><%= t("News system") %></h1>
    <p><%= t("Tomsk Administration") %></p>
  </div>
  <div class='center'>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <%= f.error_messages %>
      <p class='login'><%= f.label :email %><br />
        <%= f.email_field :email %></p>

      <p class='password'><%= f.label :password %><br />
        <%= f.password_field :password %></p>

      <% if devise_mapping.rememberable? -%>
        <p class='remember_me'><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
      <% end -%>

      <p class='submit'><%= f.submit t "login" %></p>
      <div class='auth_links'>
        <%= render :partial => "users/shared/links" %>
      </div>
    <% end %>
  </div>
  <div class='social_services'>
    <h4><%= t("I want to log in using") %></h4>
    <ul>
      <% Settings['omniauth'].each do | provider, app | %>
        <li class='<%= provider %>'>
          <%= link_to provider, "/auth/#{provider}" %>
        </li>
      <% end %>
      <li class='google'>
        <%= link_to "Google", '/auth/google' %>
      </li>
      <li class='openid'>
        <%= link_to "OpenId", '/auth/open_id' %>
      </li>
    </ul>
  </div>
  <div class='bottom'>
    <p><%= t("refer all questions to") %><a href="#">admin@esp-news.ru</a></p>
  </div>
</div>

