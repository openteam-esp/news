<h1><%= t("News system") %></h1>
<p><%= t("Tomsk Administration") %></p>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "formtastic new_user" }) do |f| %>
  <%= f.error_messages %>
  <ul class="inputs">
    <li class="login string">
      <%= f.label :email %>
      <%= f.email_field :email, :class => "focus_first" %>
    </li>
    <li class="password">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <% if devise_mapping.rememberable? %>
      <li class="remember_me">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </li>
    <% end %>
  </ul>
  <p class="submit"><%= f.submit t("login"), :class => "button" %></p>
  <p class="auth_links">
    <%= render :partial => "users/shared/links" %>
  </p>
<% end %>

<div class="social_services">
  <h2><%= t("Social authorization") %></h2>
  <ul>
    <% Settings["omniauth"].each do | provider, app | %>
      <li class="<%= provider %>">
        <%= link_to provider, "/auth/#{provider}" %>
      </li>
    <% end %>
    <li class="google">
      <%= link_to "Google", "/auth/google" %>
    </li>
    <li class="openid">
      <%= link_to "OpenId", "/auth/open_id" %>
    </li>
  </ul>
</div>

